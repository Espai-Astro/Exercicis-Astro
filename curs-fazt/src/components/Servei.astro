---
interface Props {
  nomServei?: string;
  contingut?: string;
}

const { contingut="Contingut per defecte", nomServei="Servei per defecte" } = Astro.props;
console.log('Servei -->', nomServei, "Contingut -->", contingut);
---

<div class='targeta-servei'>
  <h4>{nomServei}</h4>
  <p>{contingut}</p>
</div>

<style>
  .targeta-servei {
    width: 200px;
    background-color: #cac8c8;
    color:#202020;
    padding: 20px;
    margin: 20px 20px 20px 20px;
    border-radius: 5px;
    box-shadow:
      0 2px 10px 0 rgb(255, 255, 255, 0.5),
      0 10px 40px 0 rgb(255, 255, 255, 0.3);
  }
</style>
